@model ProyectoTiendaOnline_U2.Models.ViewModel.MetodosViewModel
@{
    ViewBag.Title = "Agregar un nuevo Método de Pago";
}
@Styles.Render("~/Content/NuevoMetodo.css")

@using (Html.BeginForm("Nuevo", "Metodos", FormMethod.Post))
{
    <div class="container_tab">
        <h2 class="pag_title">Agregar Nuevo Método</h2>
        <p style="color: white;">Llene este campo para agregar un nuevo método de Pago</p>
        <div class="table_products">
            <div style="display:flex; justify-content:center">
                <h2>Nombre del Método</h2> <br />
               
            </div>
            <div style="display:flex; justify-content:center">
                @Html.EditorFor(d => d.nombre, "", new { @class = "form-control" })
            </div>
            <div style="display:flex; justify-content:center; padding:10px">
              
                <input type="submit" value="Agregar" class="btn btn-success" width="15px"> <br>
                
            </div>
            <div style="display:flex; justify-content:center">
                <a href="@Url.Action("Index", "Metodos")" class="btn btn-danger">Cancelar</a>
            </div>
            
        </div>
    </div>

}

